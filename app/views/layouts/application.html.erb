<!DOCTYPE html>
<html>
  <head>
    <title>Reservation</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if !flash.empty? %>
      <div id="flash">
        <% flash.keys.each do |k| %>
          <div class="<%= k %>">
            <%= flash[k] %>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if current_costumer.present? %>
      <%= current_costumer.email %>
      <%= link_to 'Logout', destroy_costumer_session_path, method: :delete %>
    <% else %>
      <%= link_to 'Login as a Customer', new_costumer_session_path %>
      <%= link_to 'Sign Up as a Customer', new_costumer_registration_path %>
    <% end %>
    <% if current_owner.present? %>
      <%= current_owner.email %>
      <%= link_to 'Logout', destroy_owner_session_path, method: :delete %>
    <% else %>
      <%= link_to 'Login as an Owner', new_owner_session_path %>
      <%= link_to 'Sign Up as an Owner', new_owner_registration_path %>
    <% end %>

    <%= yield %>
    <br><i><%= link_to 'Add new place', new_place_path %></i><br>
    <i><%= link_to 'List Categories', categories_path %></i><br>
    <i><%= link_to 'List places', root_path %></i>
  </body>
</html>
