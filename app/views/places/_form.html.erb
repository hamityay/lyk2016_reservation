
<%= form_for @place do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name, placeholder: 'name' %><br>

	<%= f.label :adress %><br>
	<%= f.text_field :adress, placeholder: 'adress' %><br>

	<%= f.label :phone_number %><br>
	<%= f.text_field :phone_number, placeholder: 'phone_number' %><br>

	<%= f.label :city %><br>
	<%= f.text_field :city, placeholder: 'city' %><br>

	<%= f.label :description %><br>
	<%= f.text_area :description, placeholder: 'description', rows: 5%><br>

	<%= f.label :contact_mail %><br>
	<%= f.text_field :contact_mail, placeholder: 'contact_mail' %><br>

	<%= f.label :established_at %><br>
	<%= f.date_select :established_at, placeholder: 'established_at' %><br>

	<%= f.label :Category %>
	<%= f.select :category_id, @categories %><br>

	<%= f.label :Foods %><br>
	<%= f.collection_check_boxes(:food_ids, @foods, :id, :name) %><br>

	<%= form_for :social_profile do |sf| %>
	<h3> Social Profiles </h3>
		<%= sf.label :facebook %><br>
		<%= sf.text_field :facebook, placeholder: 'facebook' %><br>

		<%= sf.label :twitter %><br>
		<%= sf.text_field :twitter, placeholder: 'twitter' %><br>

		<%= sf.label :instagram %><br>
		<%= sf.text_field :instagram, placeholder: 'instagram' %><br>

		<%= sf.label :foursquare %><br>
		<%= sf.text_field :foursquare, placeholder: 'foursquare' %><br>

	<% end %>

	<%= f.submit 'SUBMIT' %>

<% end %>

